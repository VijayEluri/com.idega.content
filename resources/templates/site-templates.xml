<?xml version="1.0" encoding="UTF-8"?>
<site-templates>

	<site name="Business" site-category="Business">
		<structure>
			<page name="Home" type="text">
				<page name="News and Events" type="blog"/>
				<page name="About" type="text">
					<page name="Overview" type="text"/>
					<page name="Our Clients" type="text"/>
					<page name="The Team" type="text"/>
					<page name="Job Opportunities" type="text"/>
					<page name="Contact Us" type="text"/>
				</page>
				<page name="Products" type="blog"/>
				<page name="Services" type="blog"/>
				<page name="Support" type="text"/>
			</page>
		</structure>
		<variables>
			<variable name="site_title" value="My business site"/>
		</variables>
	</site>
	
	<site name="Service Company" site-category="Business">
		<structure>
			<page name="Home" type="text">
				<page name="News and Events" type="blog"/>
				<page name="Services" type="text">
					<page name="Service 1" type="text"/>
					<page name="Service 2" type="text"/>
					<page name="Service 3" type="text"/>
					<page name="Service 4" type="text"/>
					<page name="Service 5" type="text"/>
				</page>
				<page name="About Us" type="text"/>
				<page name="Feedback" type="text"/>
				<page name="Contacts" type="text"/>
			</page>
		</structure>
		<variables>
			<variable name="site_title" value="My Service Company"/>
		</variables>
	</site>

	<site name="Blog" site-category="Personal">
		<structure>
			<page name="My Blog" type="blog">
				<page name="About me" type="text"/>
				<page name="Photos" type="imagegallery"/>
				<page name="My family" type="text"/>
				<page name="Resume" type="text"/>
				<page name="Contact me" type="text"/>
			</page>
		</structure>
		<variables>
			<variable name="site_title" value="My blog"/>
		</variables>
	</site>
	
	<site name="Photo gallery" site-category="Personal">
		<structure>
			<page name="Photos" type="imagegallery">
				<page name="About me" type="text"/>
				<page name="Contact me" type="text"/>
			</page>
		</structure>
		<variables>
			<variable name="site_title" value="My photo gallery"/>
		</variables>
	</site>
	
</site-templates>