<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE dwr PUBLIC "-//GetAhead Limited//DTD Direct Web Remoting 2.0//EN" "http://www.getahead.ltd.uk/dwr//dwr20.dtd">

<dwr>
  <allow>
    <create creator="ibo" javascript="ThemesEngine" scope="application">
      <param name="class" value="com.idega.content.themes.business.ThemesEngine"/>
    </create>
    <convert converter="bean" match="com.idega.content.themes.helpers.ThemeChange">
    	<param name="exclude" value="limitedSelection"/>
    </convert>
    <convert converter="bean" match="com.idega.content.themes.helpers.TreeNodeStructure" />
    <create creator="ibo" javascript="NodeID" scope="application">
      <param name="class" value="com.idega.content.tree.NodeID"/>
    </create>
    <create creator="ibo" javascript="PagePreview" scope="application">
      <param name="class" value="com.idega.content.tree.PagePreview"/>
    </create>
    <create creator="ibo" javascript="CommentsEngine" scope="application">
      <param name="class" value="com.idega.content.business.CommentsEngine"/>
    </create>
    <convert converter="bean" match="com.idega.content.business.ContentItemComment" />
  </allow>
  
	<signatures>
		<![CDATA[
  			import java.util.List;
  			import com.idega.content.themes.business.ThemesEngine;
  			import com.idega.content.themes.helpers.ThemeChange;
			import com.idega.content.themes.helpers.TreeNodeStructure;
			import com.idega.content.business.ContentItemComment;
			
  			ThemesEngine.applyMultipleChangesToTheme(String, List<ThemeChange>, String);
  			ThemesEngine.beforeCreatePage(List<TreeNodeStructure>, Boolean);
  			CommentsEngine.getComments(String);
  		]]>
	</signatures>
</dwr>