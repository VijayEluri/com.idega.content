<?xml version="1.0"?>

<!DOCTYPE faces-config PUBLIC
  "-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.0//EN"
  "http://java.sun.com/dtd/web-facesconfig_1_0.dtd">

<faces-config>
	<component>
		<component-type>WebDAVList</component-type>
		<component-class>com.idega.content.presentation.WebDAVList</component-class>
	</component>
	
	<component>
		<component-type>WebDAVFileDetails</component-type>
		<component-class>com.idega.content.presentation.WebDAVFileDetails</component-class>
	</component>
	
	<component>
		<component-type>ContentViewer</component-type>
		<component-class>com.idega.content.presentation.ContentViewer</component-class>
		<property>
			<display-name>Root path</display-name>
			<property-name>rootPath</property-name>
			<property-class>java.lang.String</property-class>
		</property>
		<property>
			<display-name>Start Path</display-name>
			<property-name>startPath</property-name>
			<property-class>java.lang.String</property-class>
		</property>
		<property>
			<display-name>Start in users home folder</display-name>
			<property-name>useUserHomeFolder</property-name>
			<property-class>boolean</property-class>
		</property>
		<property>
			<display-name>Icon theme name</display-name>
			<property-name>iconTheme</property-name>
			<property-class>java.lang.String</property-class>
		</property>
		<property>
			<display-name>Show folders</display-name>
			<property-name>showFolders</property-name>
			<property-class>boolean</property-class>
		</property>
		<property>
			<display-name>Show drop box folder</display-name>
			<property-name>showDropboxFolder</property-name>
			<property-class>boolean</property-class>
		</property>
		<property>
			<display-name>Show public folder</display-name>
			<property-name>showPublicFolder</property-name>
			<property-class>boolean</property-class>
		</property>
		<property>
			<display-name>Columns to hide (CSV)</display-name>
			<property-name>columnsToHide</property-name>
			<property-class>java.lang.String</property-class>
		</property>
		<property>
			<display-name>Use version control</display-name>
			<property-name>useVersionControl</property-name>
			<property-class>boolean</property-class>
		</property>
		<property>
			<display-name>Show new folder tab</display-name>
			<property-name>renderNewFolderLink</property-name>
			<property-class>boolean</property-class>
		</property>
		<property>
			<display-name>Show permissions tab</display-name>
			<property-name>showPermissionTab</property-name>
			<property-class>boolean</property-class>
		</property>
		<property>
			<display-name>Show file list tab</display-name>
			<property-name>renderListLink</property-name>
			<property-class>boolean</property-class>
		</property>
		<property>
			<display-name>Show file preview link</display-name>
			<property-name>renderPreviewLink</property-name>
			<property-class>boolean</property-class>
		</property>
		<property>
			<display-name>Show file details link</display-name>
			<property-name>renderDetailsLink</property-name>
			<property-class>boolean</property-class>
		</property>
		<property>
			<display-name>Show upload form</display-name>
			<property-name>showUploadComponent</property-name>
			<property-class>boolean</property-class>
		</property>
		<property>
			<display-name>On file click event</display-name>
			<property-name>onFileClickEvent</property-name>
			<property-class>java.lang.String</property-class>
		</property>
	</component>
	
	<component>
		<component-type>ContentItemListViewer</component-type>
		<component-class>com.idega.content.presentation.ContentItemListViewer</component-class>
	</component>
	
    <managed-bean>
        <managed-bean-name>SessionBean1</managed-bean-name>
        <managed-bean-class>documentmanagementprototype2.SessionBean1</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>listDocuments2</managed-bean-name>
        <managed-bean-class>documentmanagementprototype2.listDocuments2</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>WebDAVBean</managed-bean-name>
        <managed-bean-class>com.idega.content.data.WebDAVBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>WebDavTree</managed-bean-name>
        <managed-bean-class>documentmanagementprototype2.WebDavTreeBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>folderTree</managed-bean-name>
        <managed-bean-class>documentmanagementprototype2.folderTree</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
    		<managed-bean-name>WebDAVListBean</managed-bean-name>
        <managed-bean-class>com.idega.content.presentation.WebDAVListManagedBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>WebDAVUploadBean</managed-bean-name>
        <managed-bean-class>com.idega.content.business.WebDAVUploadBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>contentviewerbean</managed-bean-name>
        <managed-bean-class>com.idega.content.presentation.ContentViewerBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>webdavfoldercreationbean</managed-bean-name>
        <managed-bean-class>com.idega.content.presentation.WebDAVFolderCreationMB</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>webdavdocumentdeleterbean</managed-bean-name>
        <managed-bean-class>com.idega.content.presentation.WebDAVDocumentDeleterMB</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>standardPermissionMatrix</managed-bean-name>
        <managed-bean-class>com.idega.content.presentation.WebDAVFilePermissionsManagedBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
        <managed-property>
            <property-name>resourceType</property-name>
            <property-class>int</property-class>
            <value>0</value>
        </managed-property>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>rolePermissionMatrix</managed-bean-name>
        <managed-bean-class>com.idega.content.presentation.WebDAVFilePermissionsManagedBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
        <managed-property>
            <property-name>resourceType</property-name>
            <property-class>int</property-class>
            <value>1</value>
        </managed-property>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>groupPermissionMatrix</managed-bean-name>
        <managed-bean-class>com.idega.content.presentation.WebDAVFilePermissionsManagedBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
        <managed-property>
            <property-name>resourceType</property-name>
            <property-class>int</property-class>
            <value>2</value>
        </managed-property>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>userPermissionMatrix</managed-bean-name>
        <managed-bean-class>com.idega.content.presentation.WebDAVFilePermissionsManagedBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
        <managed-property>
            <property-name>resourceType</property-name>
            <property-class>int</property-class>
            <value>3</value>
        </managed-property>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>sharedPermissionMatrix</managed-bean-name>
        <managed-bean-class>com.idega.content.presentation.WebDAVFilePermissionsManagedBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
        <managed-property>
            <property-name>resourceType</property-name>
            <property-class>int</property-class>
            <value>4</value>
        </managed-property>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>MetadataList</managed-bean-name>
        <managed-bean-class>com.idega.content.presentation.MetadataListManagedBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>

	<managed-bean>
		<managed-bean-name>caseListBean</managed-bean-name>
		<managed-bean-class>com.idega.content.bean.CaseListBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	
	<managed-bean>
		<managed-bean-name>relatedItemsListBean</managed-bean-name>
		<managed-bean-class>com.idega.content.bean.CaseListBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	
	<managed-bean>
		<managed-bean-name>pageCreationBean</managed-bean-name>
		<managed-bean-class>com.idega.content.bean.PageCreationManagedBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>

    <!--  converters -->
    <converter>
        <converter-for-class>com.idega.util.IWTimestamp</converter-for-class>
        <converter-class>com.idega.webface.convert.WFTimestampConverter</converter-class>
    </converter>

	<render-kit>
	     <renderer>
	          <component-family>iw_content</component-family>
	          <renderer-type>content_list_viewer</renderer-type>
	          <renderer-class>com.idega.content.renderkit.ContentListViewerRenderer</renderer-class>
	     </renderer>
	     <renderer>
	          <component-family>iw_content</component-family>
	          <renderer-type>content_item_viewer</renderer-type>
	          <renderer-class>com.idega.content.renderkit.ContentItemViewerRenderer</renderer-class>
	     </renderer>
	     <renderer>
	          <component-family>javax.faces.Output</component-family>
	          <renderer-type>content_item_toolbar_button</renderer-type>
	          <renderer-class>com.idega.content.renderkit.ContentItemToolbarButtonRenderer</renderer-class>
	     </renderer>
	</render-kit>
    
</faces-config>
